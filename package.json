{
  "name": "snake-in-vscode",
  "displayName": "Snake in VSCode",
  "description": "Play the classic snake game inside VSCode.",
  "version": "1.0.0",
  "publisher": "MChiodi",
  "icon": "icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:snake.play"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snake.play",
        "title": "Play Snake üêç"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MatheusChiodi/snake-in-vscode"
  },
  "bugs": {
    "url": "https://github.com/MatheusChiodi/snake-in-vscode/issues"
  },
  "homepage": "https://github.com/MatheusChiodi/snake-in-vscode",
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}